@{
    ViewData["Title"] = "Home Page";
}

<style>
    .loading-logo {
        position: absolute;
        z-index: 200;
        top: 50%;
        left: 50%;
        width: 172px;
        margin-top: calc(-208px / 2);
        /* Half the height */
        margin-left: calc(-172px / 2);
        /* Half the width */
        padding: 16px;
    }

    .loading-logo img {
        max-width: 140px;
        -webkit-transition: all 1s ease-in-out;
        -moz-transition: all 1s ease-in-out;
        -o-transition: all 1s ease-in-out;
        transition: all 1s ease-in-out;
        filter: invert(0%);
        -webkit-filter: invert(0%);
    }

    .loading {
        transition: opacity .8s ease-in-out;
        opacity: 0;
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        background-color: #FFFFFF;
        /*background-color: #F4E300;*/
        z-index: 3;
        pointer-events: none;
    }

    .loading h1 {
        color: black;
        position: fixed;
        top: 50%;
        width: 100%;
        text-align: center;
        transition: all .8s ease-in-out;
    }

    app:empty + .loading {
        opacity: 1;
        z-index: 100;
    }

    app:empty + .loading h1 {
        transform: translate(0, -50%);
    }
</style>


@* asp-prerender-module="ClientApp/dist/main-server" *@
<app></app>
<div class="loading">
    @*<h1>Loading...</h1>*@
    <div class="loading-logo animated pulse infinite">
